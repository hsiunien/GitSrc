<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/redbuttonpress" android:startColor="@color/redbuttonpress" />

            <stroke android:width="1dip" android:color="#bd0707" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape></item>
    <item   android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/myred" android:startColor="@color/myred" />
            <stroke android:width="1dip" android:color="#bd0707" />
            <corners android:radius="5dp" />
            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape>
    </item>
